@model IEnumerable<IdentityExtension.Models.MakeModel>

@{
    ViewData["Title"] = "Index";
    ViewData["Nav"] = "nav";
}

<div class="container">
    <div class="card-group">
        <div class="row">
            <div class="card col-md-2 equip-col"></div>
            <div class="card col-md-8 equip-col"><h2 class="head_title">Master Data Entry</h2></div>
            <div class="card col-md-2 equip-col back-btn">
                <a asp-controller="EquipmentManagement">
                    <img src="~/images/back2.png" alt="..." class="img-thumbnail equip-back">
                </a>
            </div>
        </div>
    </div>
</div>
<hr />
<p>
    <a class="btn btn-info" asp-action="Create">Create Make & Model</a>
    <a class="btn btn-info" asp-action="CreateWeaponSystem">Create Weapon System</a>
</p>
<table class="equip_table_admin table table-striped">
    <thead>
        <tr>
            <th class="eq_th_admin">
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th class="eq_th_admin">
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th class="eq_th_admin">
                @Html.DisplayNameFor(model => model.system)
            </th>
            <th class="eq_th_admin">
                @Html.DisplayNameFor(model => model.EquipmentTable)
            </th>
            <th class="eq_th_admin"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="eq_th_admin">
                    @Html.DisplayFor(modelItem => item.Make.description)
                </td>
                <td class="eq_th_admin">
                    @Html.DisplayFor(modelItem => item.Model.description)
                </td>
                <td class="eq_th_admin">
                    @Html.DisplayFor(modelItem => item.system)
                </td>
                <td class="eq_th_admin">
                    @Html.DisplayFor(modelItem => item.EquipmentTable.equipment)
                </td>
                <td class="eq_th_admin">
                    <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.id">Edit</a> 
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
