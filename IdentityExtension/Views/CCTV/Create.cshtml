@model IdentityExtension.Models.CCTV

@{
    ViewData["Title"] = "Create";
    ViewData["Nav"] = "nav";
}

<div class="container">
    <div class="card-group">
        <div class="row">
            <div class="card col-md-2 equip-col"></div>
            <div class="card col-md-8 equip-col"><h2 class="head_title">Create CCTV</h2></div>
            <div class="card col-md-2 equip-col back-btn">
