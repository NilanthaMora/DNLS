
@{
    ViewData["Title"] = "Index";
    ViewData["Nav"] = "nav";
}

<div class="container">
    <div class="card-group">
        <div class="row title-row">
            <div class="card col-md-2 equip-col"></div>
            <div class="card col-md-8 equip-col"><h2 class="head_title">View Equipment</h2></div>
            <div class="card col-md-2 equip-col back-btn">
                <a asp-controller="EquipmentManagement" asp-action="Index">
                    <img src="~/images/back2.png" alt="..." class="img-thumbnail equip-back">
                </a>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="form_home">
    <br />
    <div class="container">
        <div class="card-group">
            <div class="row equip-row">
                <div class="card col-md-4 equip-col">
                    <a asp-controller="equipment-details">
                        <div class="card mb-3 equip-card">
                            <div class="row g-0">
                                <div class="col-md-12">
                                    <div class="card-body">
                                        <h5 class="equip-card-title">Equipment Details</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="card col-md-4 equip-col">
                    <a asp-controller="ShipType" asp-action="ShipType">
                        <div class="card mb-3 equip-card">
                            <div class="row g-0">
                                <div class="col-md-12">
                                    <div class="card-body">
                                        <h5 class="equip-card-title">Type of Ships/Craft</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="card col-md-4 equip-col">
                    <a asp-controller="AreaWice" asp-action="Index">
                        <div class="card mb-3 equip-card">
                            <div class="row g-0">
                                <div class="col-md-12">
                                    <div class="card-body">
                                        <h5 class="equip-card-title">Inquiry by Make/Area</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="row equip-row">
                <div class="card col-md-4 equip-col">
                    <a asp-controller="EquipmentViewManagement" asp-action="ViewIndexMenu" asp-route-id="general">
                        <div class="card mb-3 equip-card">
                            <div class="row g-0">
                                <div class="col-md-12">
                                    <div class="card-body">
                                        <h5 class="equip-card-title">General Inquiry</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="card col-md-4 equip-col">
                    <a asp-controller="EquipmentViewManagement" asp-action="ViewIndexMenu" asp-route-id="g47">
                        <div class="card mb-3 equip-card">
                            <div class="row g-0">
                                <div class="col-md-12">
                                    <div class="card-body">
                                        <h5 class="equip-card-title">G 47 Action</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="card col-md-4 equip-col">
                    <a asp-controller="equipments" asp-action="Index">
                        <div class="card mb-3 equip-card">
                            <div class="row g-0">
                                <div class="col-md-12">
                                    <div class="card-body">
                                        <h5 class="equip-card-title">Total Equipment Status</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
