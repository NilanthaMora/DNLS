@model IdentityExtension.Models.EquipmentTable

@{
    ViewData["Title"] = "Create";
    ViewData["Nav"] = "nav";
}
<div class="container">
    <div class="card-group">
        <div class="row title-row">
            <div class="card col-md-2 equip-col"></div>
            <div class="card col-md-8 equip-col"><h2 class="head_title">Equipment Table</h2></div>
            <div class="card col-md-2 equip-col back-btn">
                <a asp-controller="EquipmentTable" asp-action="Index">
                    <img src="~/images/back2.png" alt="..." class="img-thumbnail equip-back">
                </a>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="row form-background">
    <div class="col-md-12 form-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="equipmentCode" class="control-label"></label>
                <input asp-for="equipmentCode" class="form-control" />
                <span asp-validation-for="equipmentCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="equipment" class="control-label"></label>
                <input asp-for="equipment" class="form-control" />
                <span asp-validation-for="equipment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="varName" class="control-label"></label>
                <input asp-for="varName" class="form-control" />
                <span asp-validation-for="varName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="equipmentSellCode" class="control-label"></label>
                <input asp-for="equipmentSellCode" class="form-control" />
                <span asp-validation-for="equipmentSellCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imageUrl" class="control-label"></label>
                <input asp-for="imageUrl" class="form-control" />
                <span asp-validation-for="imageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="equipmentGeneralInq" class="control-label"></label>
                <input asp-for="equipmentGeneralInq" class="form-control" />
                <span asp-validation-for="equipmentGeneralInq" class="text-danger"></span>
            </div>
            <div class="form-group submit-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
