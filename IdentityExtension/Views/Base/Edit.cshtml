@model IdentityExtension.Models.Base

@{
    ViewData["Title"] = "Edit";
    ViewData["Nav"] = "nav";
}

<div class="container">
    <div class="card-group">
        <div class="row">
            <div class="card col-md-2 equip-col"></div>
            <div class="card col-md-8 equip-col"><h2 class="head_title">Edit Base Details</h2></div>
            <div class="card col-md-2 equip-col back-btn">
                <a asp-controller="Base" asp-action="Index">
                    <img src="~/images/back2.png" alt="..." class="img-thumbnail equip-back">
                </a>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="row form-background">
    <div class="col-md-12 form-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="code" class="control-label"></label>
                <input asp-for="code" class="form-control" />
                <span asp-validation-for="code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="remCd" class="control-label"></label>
                <input asp-for="remCd" class="form-control" />
                <span asp-validation-for="remCd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="payBase" class="control-label"></label>
                <input asp-for="payBase" class="form-control" />
                <span asp-validation-for="payBase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="areaId" class="control-label"></label>
                <select asp-for="areaId" class="form-control" asp-items="ViewBag.areaId"></select>
                <span asp-validation-for="areaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="baseType" class="control-label"></label>
                <input asp-for="baseType" class="form-control" />
                <span asp-validation-for="baseType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="shipTypeId" class="control-label"></label>
                <select asp-for="shipTypeId" class="form-control" asp-items="ViewBag.shipTypeId"></select>
                <span asp-validation-for="shipTypeId" class="text-danger"></span>
            </div>
            <div class="form-group submit-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>


