                @Html.DisplayNameFor(model => model.qtyApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lastPurchasePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.remarks)
            </th>
