        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.equipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rlRef)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.qtyOrdered)
            </td>
